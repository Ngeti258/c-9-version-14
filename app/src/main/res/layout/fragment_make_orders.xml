<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MakeOrdersFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dropdown_field2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:hint="Select Fertilzer type"
        android:paddingLeft="15dp"
        android:textSize="30sp">

        <AutoCompleteTextView
            android:id="@+id/dropdown_field"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edt_background"
            android:inputType="none"
            android:textSize="16dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/edt_quantity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/dropdown_field2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:inputType="number"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:hint="Quantity in kilograms"
        android:paddingLeft="33dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_post"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_quantity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_background"
        android:text="Place Order"
        android:textColor="@color/white" />

<!--    <Button-->
<!--        android:id="@+id/my_products"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="670dp"-->
<!--        android:layout_marginLeft="100dp"-->
<!--        android:background="@drawable/btn_background"-->
<!--        android:text="@string/view_products" />-->

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>


